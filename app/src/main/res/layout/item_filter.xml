<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="filter"
            type="lromanob.beerbox.models.db.Word" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_filter_bg"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="@dimen/margin_extra_small">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/filter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{filter.word}"
            tools:text="@string/beer_item_title_example"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"
            android:paddingStart="@dimen/text_margin"
            android:paddingEnd="@dimen/text_margin"
            android:paddingTop="@dimen/text_margin_small"
            android:paddingBottom="@dimen/text_margin_small"
            />

    </LinearLayout>

</layout>